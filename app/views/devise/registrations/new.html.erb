<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>

  	<%= f.email_field :email, autofocus: true, :placeholder => "Correo electrónico" %>
  	<br />
	<% if @validatable %><i>(<%= @minimum_password_length %> caracteres como mínimo)</i>
	<% end %>
	<br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña" %>
	<br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirmar contraseña" %>

  <div><%= f.submit "Registrarse" %></div>
<% end %>

<%= render "devise/shared/links" %>
