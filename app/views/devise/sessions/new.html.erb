<div class="row">
	<div class="span12" align="center">
		<h2>Iniciar sesion</h2>
		<%= devise_error_messages! %>
		
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			<%= f.email_field :email, autofocus: true, :placeholder => "Correo electrónico" %><br />
		    <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña" %><br />
				
			<% if devise_mapping.rememberable? -%>
			    <div>
			    	<%= f.check_box :remember_me%>
			    	<%= f.label :remember_me, "Recordar contraseña" %>
			    </div>
			<% end -%>

			<div><%= f.submit "Iniciar sesion", :class => "btn" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>